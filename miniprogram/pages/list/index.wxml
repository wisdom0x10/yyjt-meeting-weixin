<van-search
  value="{{ theme }}"
  placeholder="请输入搜索关键词"
  show-action
  clearable="{{ false }}"
  bind:search="handleSearch"
  bind:cancel="handleSearch"
/>

<van-swipe-cell
  right-width="{{ 65 }}"
  left-width="{{ 65 }}"
  wx:for="{{ list }}"
  wx:key="index"
  disabled
>
  <van-cell-group>
    <van-cell
      title=""
      use-label-slot
      border="{{ true }}"
      data-id="{{ item.id }}"
      bind:click="handleToDetail"
    >
      <view
        slot="title"
        style="display: flex; justify-content: space-between"
      >
        <view style="display: flex; gap: 5px; flex: 1; align-items: center">
          <view> {{ item.theme }}</view>
          <van-tag
            type="primary"
            wx:if="{{ item.statusValue === -1 }}"
            style="flex-shrink: 0"
          >
            预约会议
          </van-tag>
          <van-tag
            color="{{ item.taskTagColor }}"
            wx:else
            style="flex-shrink: 0"
          >
            {{ item.taskTagText }}
          </van-tag>
        </view>
        <view style="width: 50px; flex-shrink: 0; text-align: start">
          {{ item.categoryText }}
        </view>
      </view>
      <view slot="label">
        <view wx:if="{{ item.meetingDeptName }}">
          {{ item.meetingDeptName }}
        </view>
        <view style="display: flex; gap: 5px; flex-wrap: wrap; padding-right: 50px">
          <van-tag
            wx:for="{{ item.labelList }}"
            wx:for-item="label"
            wx:key="index"
            text-color="{{ label.color }}"
            color="{{ label.backgroundColor }}"
          >
            {{ label.name }}
          </van-tag>
        </view>
        <view>{{ item.startTime }} - {{ item.endTime }}</view>
      </view>
    </van-cell>
  </van-cell-group>
</van-swipe-cell>
